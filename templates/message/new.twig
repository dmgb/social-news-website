{% extends 'base.twig' %}
{% block body %}
    <div class="inner-container text-center">
        <div class="form-wrapper">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.subject) }}
            </div>
            <div class="form-group">
                {{ form_row(form.body) }}
            </div>
            <button class="w-100 btn btn-lg btn-dark" type="submit">
                Submit
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
